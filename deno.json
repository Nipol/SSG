{
  "tasks": {
    "build": "deno run --allow-read --allow-write index.ts",
    "start": "deno run --allow-read --allow-write --watch=blog/,template/ index.ts",
    "tailwind":"tailwind -i main.css -o dist/build.css -w",
    "tailwind:build":"tailwind -i main.css -o dist/build.css -m"
  },
  "fmt": {
    "useTabs": false,
    "lineWidth": 120,
    "indentWidth": 2,
    "semiColons": true,
    "singleQuote": true,
    "exclude": ["blog/**/*.md"]
  }
}
